<body>
    <p id="notice"></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <%= @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "show",book_path(book)%></td>
      <!--each文の中はインスタンス変数を使用しない-->
      <!--<td>%+ link_to "edit", edit_book_path(book) %></td>-->
      <td><%= link_to "destroy", book_path, method: :delete, deta: { confirm: 'Are you sure?'}%></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<%=render "books/form", book: @book %>


</body>